# CLIO Style: photon
# Photon - Retro Teal/Pink
#
# Color Philosophy:
# - Teal and magenta combo
# - 80s synthwave aesthetic
# - Vibrant retro-future
#
# Based on Consolidated Style Schema v2.0

name=photon

# ═══════════════════════════════════════════════════════════════
# CORE SEMANTIC HIERARCHY
# ═══════════════════════════════════════════════════════════════

primary=@BOLD@@BRIGHT_CYAN@
secondary=@BRIGHT_MAGENTA@
normal=@CYAN@
muted=@MAGENTA@
subtle=@DIM@

# ═══════════════════════════════════════════════════════════════
# CONVERSATIONAL
# ═══════════════════════════════════════════════════════════════

user_prompt=@BRIGHT_MAGENTA@
user_text=@CYAN@
agent_label=@BOLD@@BRIGHT_CYAN@
agent_text=@CYAN@
system_message=@MAGENTA@

# ═══════════════════════════════════════════════════════════════
# FEEDBACK MESSAGES
# ═══════════════════════════════════════════════════════════════

error=@BRIGHT_RED@
warning=@BRIGHT_YELLOW@
success=@BRIGHT_MAGENTA@
info=@MAGENTA@

# ═══════════════════════════════════════════════════════════════
# DATA DISPLAY
# ═══════════════════════════════════════════════════════════════

label=@MAGENTA@
value=@BRIGHT_MAGENTA@

# ═══════════════════════════════════════════════════════════════
# ACTIONABLE ELEMENTS
# ═══════════════════════════════════════════════════════════════

command=@BRIGHT_MAGENTA@
link=@BRIGHT_MAGENTA@@@UNDERLINE@

# ═══════════════════════════════════════════════════════════════
# PROMPT
# ═══════════════════════════════════════════════════════════════

