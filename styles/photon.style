prompt_directory=@BRIGHT_MAGENTA@
prompt_git_branch=@MAGENTA@
prompt_indicator=@BRIGHT_MAGENTA@

# ═══════════════════════════════════════════════════════════════
# MARKDOWN
# ═══════════════════════════════════════════════════════════════

markdown_h1=@BOLD@@BRIGHT_CYAN@
markdown_h2=@BRIGHT_MAGENTA@
markdown_h3=@CYAN@
markdown_bold=@BOLD@
markdown_italic=@DIM@
